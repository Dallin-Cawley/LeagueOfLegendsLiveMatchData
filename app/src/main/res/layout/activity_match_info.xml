                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_below="@+id/start_dependency"
                android:layout_toRightOf="@id/team1_top_lane_champ_pic"
                android:layout_toEndOf="@id/team1_top_lane_champ_pic"

